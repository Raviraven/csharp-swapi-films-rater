@model List<swapi_films_rater.Models.ViewModels.FilmListViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="index">
    <h2 class="index__header">Choose your film :)</h2>
    <table class="index__table">
        <thead>
            <tr>
                <th>
                    Episode
                </th>
                <th>
                    Title
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var film in Model)
            {
                var routeData = new Dictionary<string, string>();
                routeData.Add("Id", film.UrlId.ToString());

                <tr>
                    <td>@film.EpisodeId</td>
                    <td>@film.Title</td>
                    <td>
                        <a asp-controller="Films" asp-action="Details" asp-all-route-data="routeData" >Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>